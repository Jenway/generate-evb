{
  "rules": {
    "indent": [
      2,
      4
    ],
    "max-len": [
      2,
      120,
      4,
      {
        "ignoreComments": false,
        "ignoreUrls": true
      }
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "args": "none"
      }
    ]
  },
  "env": {
    "node": true
  },
  "extends": "eslint:recommended"
}
